<div class="page-header">
  <h1>All News</h1>
</div>

<%= link_to "New news post", new_post_path, class: "btn btn-success" %>

<% if @posts %>
  <% @posts.reverse.each do |post| %>
    <div class="post">
      <h2 class="post-title"><%= link_to post.title, post %></h2>
      <p>By <%= post.author %> - Posted <%= time_ago_in_words(post.created_at) %> ago</p>
      <p><%= truncate(post.content, :length => 150) %> <%= link_to "Read entire post", post %></p>
    </div>
  <% end %>
<% end %>